    <% if (typeof contactSuccess !=="undefined" && contactSuccess==="1" ) { %>
      <div id="confirmation-message" class="alert alert-success text-center">✅ Message sent successfully!</div>
      <script> 
            // Scroll smoothly to the confirmation message
            let message = document.getElementById("confirmation-message");
            if (message) {
                message.scrollIntoView({ behavior: "smooth" });
            }
        setTimeout(() => {
                        window.location.href = "/home"; // Redirect after 5 seconds
                    }, 5000);
      </script>
      <% } else if (typeof contactError !=="undefined" && contactError==="1" ) { %>
        <div class="alert alert-danger text-center">❌ Error sending message. Try again.</div>
        <% } %>

  </section>




